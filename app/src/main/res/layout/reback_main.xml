<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--1.原商品明细-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EE7700"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/corner"
            android:layout_height="match_parent"
            android:background="@color/translucent" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/translucent"
            android:text="序" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/translucent"
            android:text="名称" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/translucent"
            android:text="实价" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/translucent"
            android:text="数量" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="2"
            android:background="@color/translucent"
            android:gravity="center|right"
            android:text="小计" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listWare"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <!--2.原付款明细-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EE7700"
        android:gravity="center"
        android:orientation="horizontal">


        <View
            android:layout_width="@dimen/corner"
            android:layout_height="match_parent"
            android:background="@color/translucent" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/translucent"
            android:text="序" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/translucent"
            android:text="原付款名称" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="2"
            android:background="@color/translucent"
            android:gravity="center|right"
            android:text="原付款金额" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listPay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />


    <!--菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelReback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/click_style"
            android:clickable="true"
            android:text="取消退款"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/inputSaleno"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/click_style"
            android:clickable="true"
            android:text="输入单号"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/confirmReback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/click_style"
            android:clickable="true"
            android:text="确定退款"
            android:textColor="#ffffff" />


    </LinearLayout>


</LinearLayout>
