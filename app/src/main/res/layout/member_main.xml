<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 1.标题 -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:cardBackgroundColor="#D24432"
        app:cardCornerRadius="@dimen/corner"
        app:cardElevation="@dimen/corner"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/corner">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D24432"
            android:gravity="center"
            android:text="会员卡信息详情"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <!-- 2.基本信息 -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:cardBackgroundColor="#E85846"
        app:cardCornerRadius="@dimen/corner"
        app:cardElevation="@dimen/corner"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E85846"
                    android:gravity="center|right"
                    android:paddingRight="8dp"
                    android:text="会员卡号：" />

                <TextView
                    android:id="@+id/cardno"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#E85846"
                    android:gravity="center|left"
                    android:paddingLeft="8dp"
                    android:text="005555666655" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E85846"
                    android:gravity="center|right"
                    android:paddingRight="8dp"
                    android:text="卡余额：" />

                <TextView
                    android:id="@+id/cardValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#E85846"
                    android:gravity="center|left"
                    android:paddingLeft="8dp"
                    android:text="10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E85846"
                    android:gravity="center|right"
                    android:paddingRight="8dp"
                    android:text="可用积分：" />

                <TextView
                    android:id="@+id/canUseValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#E85846"
                    android:gravity="center|left"
                    android:paddingLeft="8dp"
                    android:text="10" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!--3.级别信息-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:cardBackgroundColor="#E85846"
        app:cardCornerRadius="@dimen/corner"
        app:cardElevation="@dimen/corner"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E85846"
                    android:gravity="center|right"
                    android:paddingRight="8dp"
                    android:text="会员卡级别：" />


                <TextView
                    android:id="@+id/cardLevel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#E85846"
                    android:gravity="center|left"
                    android:paddingLeft="8dp"
                    android:text="金卡" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E85846"
                    android:gravity="center|right"
                    android:paddingRight="8dp"
                    android:text="会员卡状态：" />

                <TextView
                    android:id="@+id/cardState"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#E85846"
                    android:gravity="center|left"
                    android:paddingLeft="8dp"
                    android:text="可用" />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <!-- 4.折扣信息 -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:cardBackgroundColor="#E85846"
        app:cardCornerRadius="@dimen/corner"
        app:cardElevation="@dimen/corner"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E85846"
                    android:gravity="center|right"
                    android:paddingRight="8dp"
                    android:text="卡所属门店：" />


                <TextView
                    android:id="@+id/cardOrgcode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#E85846"
                    android:gravity="center|left"
                    android:paddingLeft="8dp"
                    android:text="广州金龙店" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E85846"
                    android:gravity="center|right"
                    android:paddingRight="8dp"
                    android:text="享受折扣：" />

                <TextView
                    android:id="@+id/cardRebate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#E85846"
                    android:gravity="center|left"
                    android:paddingLeft="8dp"
                    android:text="85" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <!--5.按钮区域-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:cardCornerRadius="@dimen/corner"
        app:cardElevation="@dimen/corner"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.uxun.pos.view.widget.CustomButtom
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:text="返回" />

         <View
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <com.uxun.pos.view.widget.CustomButtom
                android:id="@+id/cancelMember"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:text="取消会员" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
