<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/corner"
    android:gravity="center"
    android:orientation="vertical">

    <com.uxun.pos.view.widget.AttentionView
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="提示！"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingLeft="@dimen/corner"
        android:scrollbars="vertical"
        android:text="你确定要删除选中数据吗你确定要删除选中数据吗你确定要删除选中数据吗你确定要删除选中数据吗你确定要删除选中数据吗？"
        android:textColor="#000000" />


    <com.uxun.pos.view.widget.CustomButtom
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:text="确定" />

</LinearLayout>
